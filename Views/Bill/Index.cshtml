@model List<bbqbank.Models.Bill>

@{
    ViewBag.Title = "Bills";
}

<section>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Total</th>
                <th>Who paid</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var row in Model)
            {
                <tr>
                    <td>@row.Name</td>
                    <td>@row.Total</td>
                    <td>@row.WhoPaidName()</td>
                    <td>@row.Date.ToShortDateString()</td>
                    <td>
                        @using(Html.BeginForm("Delete", "Bill"))
                        {
                            <input type="hidden" name="Id" value="@row.Id"/>
                            <button class="btn btn-danger" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>